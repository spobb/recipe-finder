{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "outDir": "./dist/api",
        "paths": {
            "@src/*": ["./*"],
            // resources
            "@user/*": ["api/resources/user/*"],
            "@auth/*": ["api/resources/auth/*"],
            // types
            "@interfaces": ["api/types/interfaces"],
            "@enums": ["api/types/enums"]
        }
    }
}